    <LinearLayout
        android:id="@+id/layoutBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        app:layout_constraintTop_toBottomOf="@id/layoutData">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="10dp"
                android:text="Pilih Tanggal"
                android:id="@+id/tv_tgl"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunitoregular"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_date_24" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tgl_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2F80ED"
                app:layout_constraintStart_toEndOf="@id/tv_tgl" />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Sesi Booking"
                android:background="@color/white"
                android:layout_marginTop="8dp">
                <AutoCompleteTextView
                    android:textColor="#2F80ED"
                    android:id="@+id/inputSesiBooking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutBooking"
        android:paddingEnd="100dp"
        android:paddingStart="100dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="50dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="265dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Booking"
            android:textAllCaps="false"
            android:backgroundTint="#2F80ED"
            android:textColor="#CAE8FF"
            android:fontFamily="@font/nunitobold"
            app:cornerRadius="100dp"
            android:textSize="18sp"/>
